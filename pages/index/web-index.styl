body 
  margin: 0
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
h1, h2, h3, h4, h5, h6, p
  font-weight 400
  margin 0

ul,li
  list-style none
  margin 0
  padding 0

html,body, main, #__next
  width 100%;
  height 100%;

.index-page
  width 100%
  height 100%
  background linear-gradient(180deg, #191619 0, #333933 49%, #131313 100%);
  position relative

.content 
  color #fff;
  width 750px
  position absolute
  top 38.2%
  left 50%
  transform:  translate(-50%, -50%);
  // display flex
  .galaxy-box
    flex 0 0 500px;
  .describe
    position absolute
    right 0
    top 49%
    transform: translate(50%, -50%)
    h1
      color: #fff
      font-size 80px
      text-align center
      margin  40px 0
    h2
      color: #aaaaaa
      font-size 24px
