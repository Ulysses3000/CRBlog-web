body 
  background linear-gradient(180deg, #030000 0, #333633 30%, #030000 100%);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
h1, h2, h3, h4, h5, h6
  font-weight 400
  margin 0

ul,li
  list-style none
  margin 0
  padding 0

html,body, main, #__next
  width 100%;
  height 100%;

.page
  width 100%
  height 100%
  position relative

.content 
  color #fff;
  width 900px
  position absolute
  top 38.2%
  left 50%
  transform:  translate(-50%, -50%);
  display flex
  .galaxy-box
    flex 0 0 500px;
  .describe
    padding 80px 0 0 40px 
    h1
      color: #fff
      font-size 80px
      text-align center
      margin  40px 0
    h2
      color: #aaaaaa
      font-size 24px
