.galaxy-box
  width 800px
  height 800px
  border 1px solid skyblue
  perspective 500px
  ul
    position relative
    height 100%
  li 
    // padding-top 100%
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    border-radius 50%
    border 2px solid #fff
    &::after
      content ''
      display block
      padding-top 100%
    div 
      width 100%
      height 100%
      position absolute
      animation: RingRotate linear 5s infinite
      span
        display block
        width 4px
        position absolute
        bottom -2px
        left 50%
        border-radius 50%
        background-color #fff
        box-shadow: 0 0 3px 6px rgba(255,255,255, 0.7)
        &::after
          content ''
          display block
          padding-top 100%
    

@keyframes RingRotate {
  from {
    transform: rotateZ(0deg) 
  }
  to {
    transform: rotateZ(360deg) 
  }
}